@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container" style="padding: 10px; border: 1px solid #ccc;">
    <div class="row">
        <div class="col-md-6" style="text-align:center">
            <img src="~/images/nene.png" style="width:100%" alt="welcome" />
        </div>
        <div class="col-md-6" style="max-width: 350px; margin: 0 auto;">
            <section>
                <form id="account" method="post">
                    <div style="text-align:center">
                        <img style="display: inline-block; max-width: 250px; height: auto;"
                             src="~/images/empresa.png"
                             alt="Logo de la Empresa" />
                    </div>

                    <h2>Login</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                        </p>*@
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate como un nuevo usuario</a>
                        </p>
@*                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmación</a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
